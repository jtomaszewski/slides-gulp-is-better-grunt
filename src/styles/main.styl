// Import CSS from "node_modules" and "bower_components"
// thanks to Stylus' "import css" and "paths" options

@import 'prism/themes/prism-okaidia.css'
// Check out "bower_components/prism/themes/" for available themes

@import 'nib' // CSS3 extensions for Stylus: http://visionmedia.github.io/nib/

// variables!

slide_width = 640px
slide_height = 480px
slide_background = #111

slide_transition_length = .6s
slide_transition_easing = ease
slide_transition_rotate_y = 15deg
// Safari bugs out on 3d transform-origins, so we have to fake it
slide_transition_nudge_x = -100px

bullet_transition_length = .3s
bullet_transition_easing = ease
bullet_transition_translate_x = 16px

pink = #EB4A4B
grunt = #CF8C51

// mixins!
background-cover(image)
  background-image: url(image)
  background-position: cover
  background-size: cover

// base

*
  box-sizing: border-box
  margin: 0
  padding: 0

@media print
  *
    -webkit-print-color-adjust: exact

@page
  size: landscape
  margin: 0

// bespoke.js layout styles

article
  transition: background slide_transition_length slide_transition_easing
  display: none
  &.bespoke-parent
    display: block
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    overflow: hidden
    @media print
      overflow: visible
      position: static
    perspective: 600px

.bespoke-slide
  transition:
    transform slide_transition_length slide_transition_easing,
    opacity slide_transition_length slide_transition_easing,
    background slide_transition_length slide_transition_easing
  transform-origin: 50% 50% 0
  backface-visibility: hidden
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  text-align: center
  width: slide_width
  height: slide_height
  position: absolute
  top: 50%
  margin-top: (slide_height / 2) * -1
  left: 50%
  margin-left: (slide_width / 2) * -1
  background: slide_background
  padding: 40px
  border-radius: 0
  @media print
    zoom: 1 !important // disable bespoke-scale
    height: 743px // seems to correspond with an A4, landscape page height
    width: 100%
    page-break-before: always
    position: static
    margin: 0

.bespoke-before
  transform: translateX(slide_transition_nudge_x * -1) translateX(slide_width / -2) rotateY(slide_transition_rotate_y * -1) translateX(slide_width / -2)

.bespoke-after
  transform: translateX(slide_transition_nudge_x) translateX(slide_width / 2) rotateY(slide_transition_rotate_y) translateX(slide_width / 2)
  @media print
    transform: none

.bespoke-inactive
  opacity: 0
  pointer-events: none
  @media print
    opacity 1

.bespoke-active
  opacity: 1

// bespoke-bullet styles

.bespoke-bullet
  transition: all bullet_transition_length bullet_transition_easing

.bespoke-bullet-inactive
  opacity: 0
  li&
    transform: translateX(bullet_transition_translate_x)
  @media print
    opacity: 1

.bespoke-bullet-active
  opacity: 1

// bespoke-scale styles

.bespoke-scale-parent
  perspective: 600px
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  @media print
    transform: none !important

// bespoke-progress styles

.bespoke-progress-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  height: 2px
  @media only screen and (min-width: 1366px)
    height: 4px
  @media print
    display: none

.bespoke-progress-bar
  transition: width .6s ease
  position: absolute
  height: 100%
  background: #0089f3
  border-radius: 0 4px 4px 0

// bespoke-state styles

.emphatic,
.emphatic .bespoke-slide
  background-color: slide_background

// bespoke-secondary styles
.bespoke-slide aside
  display: none;

// prism styles

pre
  padding: 26px !important
  border-radius: 8px
  font-size .8em

// content styles

body
  font-family: "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
  font-size: 18px
  color: #fff
  background-color #111

h1
  font-size: 72px
  line-height: 82px
  letter-spacing: -2px
  margin-bottom: 16px
  color: pink

h2
  font-size: 42px
  letter-spacing: -1px
  margin-bottom: 8px
  color: pink
  &.smaller
    font-size 28px

h3
  font-size: 24px
  font-weight: normal
  margin-bottom: 24px
  &.smaller
    font-size 20px


hr
  visibility: hidden
  height: 20px

ul
  list-style: disc
  text-align left
  margin .5em 0 .5em 1em

li
  margin-bottom: 12px

p
  margin: 0 100px 12px
  line-height: 22px

a
  color: #0089f3
  text-decoration: none

del
  opacity: .5

.facepalm
  background-cover "../images/annoyed-facepalm-picard-l.png"

.logos
  margin-top 1em
  img
    max-width: 30%
    margin: 0 1.5%
    max-height: 80%

.logo
  max-height: 80%
  &.logo-small
    max-height: 5em

.tolong
  font-size .5em
  max-height 50em

.toolong
  font-size .4em
  max-height 50em

.spaghetti
  background-cover "../images/curried+sardine+spaghetti+2.JPG"

  h2
    color #fff

.pro
  color: #B99844

.con
  color: #57B944

.example
  font-size .8em
  margin-left 1em

.small
  font-size .5em

.align-left
  text-align left

.pink
  color pink
.white
  color white
.gray
  color #ccc
.grunt
  color #E48632
.light
  font-weight lighter

.author
  position absolute
  bottom 1em
  right 1em
  color white
  font-size 1.2em
  a
    color inherit

.author-block
  border-top 1px solid #666
  margin-top: 1em
  padding-top 1em
  display flex
  flex-direction: row
  a
    color inherit
  .author-block-right
    margin-left: .5em
    text-align left
  .author-image
    border-radius: 50%
    width: 3em
    height: 3em
  .author-name
    color #fff
  .author-caption
    font-weight: lighter
    font-size .8em
    a
      color pink

.nostyle
  list-style none
  margin 1em
  text-align center

.row
  display: flex
  flex-direction: row
  .col
    flex 1
    margin: 0 2em

.slide-intro
  @extend .row

  .logo
    max-height 40%
    margin-top -6.1em

  .right
    text-align left
    margin-left 1em

  .grunt
    color grunt

  .subcaption
    display block
    margin-top -.3em

.slide__absolute
  position absolute
  top 15%

.hide-when-1
  opacity: 1
  transition: opacity 0.5s
  .jt-chain-1 &
    opacity: 0

.show-when-1
  opacity: 0
  position absolute
  display inline-block
  transition: opacity 0.5s
  transition-delay: 0
  .jt-chain-1 &
    opacity: 1
    transition-delay: .5s
  &.first
    margin-left: -5.3em

.pink-when-1
  transition: color 0.5s
  .jt-chain-1 &
    color pink

.slide-workflow
  .col
    text-align
    .col-title
      text-transform: uppercase
    ul
      font-size .8em

    &.bullet
      &.bespoke-bullet-active:not(.bespoke-bullet-current)
        opacity 0
